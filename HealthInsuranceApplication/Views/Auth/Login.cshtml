                <p class="form-text">For a more personalized experience, sign in with your registered mobile number</p>
                <div class="form-group">
                    <label class="fw-bold">Enter Mobile Number</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Mobile Number" id="mobile">
                    </div>
                </div>
                <div class="form-group">
                    <label class="fw-bold">Enter Email</label>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Enter Email Address" id="email">
                    </div>
                </div>
                <button type="button" class="btn btn-success sign-in-button" id="signIn" disabled>Sign in with OTP</button>
                <div class="divider">or</div>
                <button type="button" class="btn btn-danger sign-in-button">Sign in with Google</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal HTML -->
<div class="modal fade" id="otpModal" tabindex="-1" aria-labelledby="otpModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" asp-action="VerifyOtp" asp-controller="Auth" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="otpModalLabel">Verify OTP</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
