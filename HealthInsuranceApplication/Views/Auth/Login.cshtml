                    <label for="otp">Enter OTP</label>
                    <input type="text" class="form-control" id="otpInput">
                </div>
                <div class="alert alert-danger mt-2 d-none" id="otpError"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="verifyOtpBtn">Verify OTP</button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        function checkFields() {
            var email = document.getElementById("email").value;
            var mobile = document.getElementById("mobile").value;
            var sendOtpBtn = document.getElementById("signIn");

            if (email && mobile) {
                sendOtpBtn.disabled = false;
            } else {
                sendOtpBtn.disabled = true;
            }
        }

        document.addEventListener('DOMContentLoaded', (event) => {
            checkFields(); // Initial check
            var inputs = document.querySelectorAll('#loginForm input');
            inputs.forEach(function (input) {
                input.addEventListener('input', checkFields);
            });

            document.getElementById("signIn").addEventListener('click', function () {
                var otpModal = new bootstrap.Modal(document.getElementById('otpModal'), {
                    keyboard: false
                });
                otpModal.show();
            });

            document.getElementById("verifyOtpBtn").addEventListener('click', function () {
                var otp = document.getElementById("otpInput").value;
                alert('OTP entered: ' + otp);
            });
